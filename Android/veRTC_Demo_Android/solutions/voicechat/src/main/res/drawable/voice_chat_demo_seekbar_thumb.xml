<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            android:shape="oval"
            android:useLevel="false">
            <solid android:color="#E5E6EB"/>
            <size
                android:width="20dp"
                android:height="20dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape
            android:shape="oval"
            android:useLevel="false">
            <solid android:color="#E5E6EB"/>
            <size
                android:width="20dp"
                android:height="20dp"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval"
            android:useLevel="false">
            <solid android:color="#E5E6EB"/>
            <size
                android:width="20dp"
                android:height="20dp"/>
        </shape>
    </item>
</selector>