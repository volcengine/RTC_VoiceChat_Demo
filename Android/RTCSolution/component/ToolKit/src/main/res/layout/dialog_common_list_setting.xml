<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="bottom"
        android:background="#272E3B">

        <TextView
            android:id="@+id/common_list_setting_cancel"
            android:layout_width="wrap_content"
            android:layout_height="76dp"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/cancel"
            android:textColor="#C9CDD4"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/common_list_setting_title"
            android:layout_width="wrap_content"
            android:layout_height="76dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="标题"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/common_list_setting_confirm"
            android:layout_width="wrap_content"
            android:layout_height="76dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/ok"
            android:textColor="#4080FF"
            android:textSize="15sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/common_list_setting_rv"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignTop="@id/common_list_setting_rv"
            android:layout_marginTop="50dp"
            android:background="#1AFFFFFF" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignTop="@id/common_list_setting_rv"
            android:layout_marginTop="100dp"
            android:background="#1AFFFFFF" />
    </RelativeLayout>
</FrameLayout>