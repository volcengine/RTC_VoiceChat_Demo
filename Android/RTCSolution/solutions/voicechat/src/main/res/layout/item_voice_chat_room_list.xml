<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/create_chat_room_item_bg">

    <TextView
        android:id="@+id/item_voice_chat_demo_room_tile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="92dp"
        android:textColor="@color/white"
        android:textSize="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Chrily chat room" />

    <TextView
        android:id="@+id/item_voice_chat_demo_room_name_prefix"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/voice_chat_room_list_name_prefix_icon"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_voice_chat_demo_room_tile"
        tools:text="C" />

    <TextView
        android:id="@+id/item_voice_chat_demo_room_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="92dp"
        android:textColor="#E5E6EB"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@id/item_voice_chat_demo_room_name_prefix"
        app:layout_constraintLeft_toRightOf="@id/item_voice_chat_demo_room_name_prefix"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_voice_chat_demo_room_name_prefix"
        tools:text="Chrily" />

    <ImageView
        android:layout_width="56dp"
        android:layout_height="20dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/voice_chat_room_list_status_icon"
        app:layout_constraintBottom_toBottomOf="@id/item_voice_chat_demo_room_tile"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_voice_chat_demo_room_tile" />

    <TextView
        android:id="@+id/item_voice_chat_demo_room_audience_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:drawablePadding="5dp"
        android:textColor="@color/white"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@id/item_voice_chat_demo_room_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_voice_chat_demo_room_name"
        tools:text="2" />
</androidx.constraintlayout.widget.ConstraintLayout>